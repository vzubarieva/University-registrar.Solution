@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department

<h4>Add a new department</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Add new department" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all departments", "Index")</p>