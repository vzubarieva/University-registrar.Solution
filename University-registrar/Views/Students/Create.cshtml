@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h4>Add a new student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.DateOfEnrollment)
  @Html.TextBoxFor(model => model.DateOfEnrollment, "", new Dictionary<string, object>
{
{ "type", "date" }
})

  @Html.Label("Select course")
  @Html.DropDownList("CourseId")

  @Html.Label("Select departments")
  @Html.DropDownList("DepartmentId")

  <input type="submit" value="Add new student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>